<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <LangVersion>7.3</LangVersion>
    <AssemblyName>NoBreakdowns</AssemblyName>
    <RootNamespace>NoBreakdowns</RootNamespace>
    <OutputPath>C:\Program Files (x86)\Steam\steamapps\common\RimWorld\Mods\NoBreakdowns\Assemblies\</OutputPath>
    <!-- Ensure no .NET Core/.NET 8.0 references -->
    <UseWPF>false</UseWPF>
    <UseWindowsForms>false</UseWindowsForms>
