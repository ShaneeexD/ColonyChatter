      <Private>False</Private>
    </Reference>
    <Reference Include="Verse">
      <HintPath>C:\Program Files (x86)\Steam\steamapps\common\RimWorld\RimWorldWin64_Data\Managed\Verse.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="System.Core">
